"VertexlitGeneric"
{
	"$basetexture" "models/props_parable/console/MonitorLines"
	"$additive" "1"
	$selfillum 1
	
	"$phong"		"1"
	"$phongexponent"		"25"
	"$phongboost"		"1"
	"$phongfresnelranges"		"[0.2 0.5 1]"
	
	"$jumpchance" 0.0
    "$jumpchancethreshold" 0.98
    "$nojump" 0.0
    "$jumpdistance" 0.0
    "$translate2" "[0.0 0.0]"
	"$sineoffsetvar" "0.0"
	"$jumpresult" "0.0"
	
	"Proxies"
	{		
		// The picture jumps when the random number $jumpchance is greater
        // than $jumpchancethreshold.
		"GaussianNoise"
        {
            "mean" 0.5
            "halfWidth" 0.2
            "minVal" 0.0
            "maxVal" 1.0
            "resultVar" "$jumpchance"            
        }
        // If it jumps, the distance it jumps is also random
        "GaussianNoise"
        {
            "mean" 0
            "halfWidth" 0.1
            "minVal" -0.5
            "maxVal" 0.5
            "resultVar" "$jumpdistance"            
        }
        "LessOrEqual"
        {
            "srcVar1" "$jumpchance"
            "srcVar2" "$jumpchancethreshold"
            "lessEqualVar" "$nojump"
            "greaterVar" "$jumpdistance"
            "resultVar" "$jumpresult"
        }
		
		//Add jumping to the sine
		"Add"
		{
			"srcVar1" "$jumpresult"
			"srcVar2" "$sineoffsetvar"
			"resultVar" "$sineoffsetvar"
		}
		//Reset jump var
		"Equals"
		{
			"srcVar1" "0.0"
			"resultVar" "$jumpresult"
		}
		
		"Sine"
		{
			"sineperiod" "12"
			"timeoffset" "$sineoffsetvar"
			"sinemin" "-.2"
			"sinemax" ".6"
			"resultVar" "$translate2[1]"
		}
		
        "TextureTransform"
        {
            "translateVar" "$translate2"
            "resultVar" "$basetexturetransform"
        }
	}
}
